.row
  .col-md-12
    h1 = @page.title

    - if editing?
      p = link_to new_sermon_path, class: 'btn btn-primary' do
        span.glyphicon.glyphicon-plus>
        | Add sermon

    .list-group
      - @sermons.each do |sermon|
        = link_to sermon_path(sermon, from: @page.identifier), class: "list-group-item" do
          span.glyphicon.glyphicon-arrow-right.pull-right
          h5.list-group-item-heading = "#{sermon.date.strftime("%-d %b %Y")} â€” #{sermon.title}"
          p.list-group-item-text = sermon.formatted_description
    = will_paginate @sermons
