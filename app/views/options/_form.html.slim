= form_for $config, html: { class: 'form-horizontal' } do |f|
  - if $config.errors.any?
    #error_explanation
      h2 = "#{pluralize($config.errors.count, "error")} prohibited this option from being saved:"
      ul
        - $config.errors.full_messages.each do |message|
          li = message

  legend Basics
  .control-group
    = f.label :title, class: 'control-label'
    .controls = f.text_field :title, class: 'input-xxlarge'
  .control-group
    = f.label :tagline, class: 'control-label'
    .controls = f.text_field :tagline, class: 'input-xxlarge'
  .control-group
    = f.label :use_news, "Enable Sections", class: 'control-label'
    .controls
      label.checkbox for="option_use_news"
        | News
        = f.check_box :use_news
      label.checkbox for="option_use_community"
        | Community Pages
        = f.check_box :use_community
      label.checkbox for="option_use_about"
        | About Page
        = f.check_box :use_about
      label.checkbox for="option_use_sermons"
        | Podcasts
        = f.check_box :use_sermons

  legend Leader
  .control-group
    = f.label :leader_title, "Title", class: 'control-label'
    .controls
      = f.text_field :leader_title, class: 'input-xxlarge'
      p.help-block For example: Minister, Pastor, etc.
  .control-group
    = f.label :leader_name, "Name", class: 'control-label'
    .controls = f.text_field :leader_name, class: 'input-xxlarge'
  .control-group
    = f.label :leader_image, "Picture", class: 'control-label'
    .controls
      img.image-preview src=$config.leader_image.url style="width:100px;height:100px"
      br
      = f.file_field :leader_image, accept: 'image/*'
      p.help-block We recommend this is at least 128&times;128px
      p.help-block Note that the preview won't update until you click 'Save'
  .control-group
    label.control-label Contact Methods
    .controls
      label.checkbox
        | Email
        = f.check_box :leader_use_email
      label.checkbox
        | Phone
        = f.check_box :leader_use_phone
      label.checkbox
        | Address
        = f.check_box :leader_use_address
      p.help-block These will be displayed on the front page of the website
  .control-group
    = f.label :leader_phone, "Phone Number", class: 'control-label'
    .controls = f.text_field :leader_phone, class: 'input-xxlarge'
  .control-group
    = f.label :leader_email, "Email Address", class: 'control-label'
    .controls = f.email_field :leader_email, class: 'input-xxlarge'
  .control-group
    = f.label :leader_address, "Physical Address", class: 'control-label'
    .controls = f.text_area :leader_address, class: 'input-xxlarge', rows: 4
  .control-group: .controls = f.submit 'Save', class: 'btn btn-primary'
