- if user_signed_in?
  .row.mode-switch
    .col-md-12
      - if editing? && @page
        => link_to edit_page_path(@page), class: "btn btn-default" do
          span.glyphicon.glyphicon-pencil>
          | Page options

      - if editing?
        = link_to toggle_editing_path(return_to: request.url), class: "btn btn-default" do
          span.glyphicon.glyphicon-eye-open>
          | Stop editing
      - else
        = link_to toggle_editing_path(return_to: request.url), class: "btn btn-primary" do
          span.glyphicon.glyphicon-wrench>
          | Edit content
